<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Calendar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      margin: 0;
      padding: 0;
    }

    .wrapper {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }

    .calendar {
      display: grid;
      grid-template-rows: auto 1fr;
      margin-top: 20px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .current-date {
      font-size: 1.5rem;
      font-weight: 600;
    }

    .total-bookings {
      font-size: 1rem;
      color: #555;
    }

    .icons {
      display: flex;
      gap: 10px;
    }

    .icons .material-icons-outlined {
      cursor: pointer;
      font-size: 28px;
      transition: transform 0.2s ease;
      color: #007bff;
    }

    .icons .material-icons-outlined:hover {
      transform: scale(1.2);
    }

    .weeks {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      text-align: center;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .days {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 5px;
    }

    .days li {
      list-style: none;
      text-align: center;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      min-height: 60px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: relative;
      background-color: white;
    }

    .days li:empty {
      visibility: hidden;
      border: none;
    }

    .days li:hover {
      background-color: #f0f0f0;
      cursor: pointer;
    }

    .pending {
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .past {
      background-color: #fff3cd;
      color: #856404;
      border: 1px solid #ffeeba;
    }

    .booking-count {
      background-color: #007bff;
      color: #fff;
      border-radius: 50%;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.8rem;
      position: absolute;
      top: 5px;
      right: 5px;
    }

    @media (max-width: 768px) {
      .weeks,
      .days {
        grid-template-columns: repeat(7, minmax(30px, 1fr));
      }

      .days li {
        padding: 8px;
        font-size: 0.8em;
        min-height: 50px;
      }
    }

    @media (max-width: 480px) {
      .wrapper {
        padding: 10px;
      }

      .weeks,
      .days {
        grid-template-columns: repeat(7, minmax(20px, 1fr));
      }

      .days li {
        padding: 14px;
        font-size: 0.7em;
        min-height: 40px;
      }

      .booking-count {
        width: 15px;
        height: 15px;
        font-size: 0.7rem;
      }
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <%- include('./layouts/header') %>
    <header>
      <div>
        <p class="current-date"></p>
        <p class="total-bookings"></p>
      </div>
      <div class="icons">
        <span id="prev" class="material-icons-outlined" aria-label="Previous month">chevron_left</span>
        <span id="next" class="material-icons-outlined" aria-label="Next month">chevron_right</span>
      </div>
    </header>
    <div class="calendar">
      <ul class="weeks" style="list-style:none;">
        <li>Sun</li>
        <li>Mon</li>
        <li>Tue</li>
        <li>Wed</li>
        <li>Thu</li>
        <li>Fri</li>
        <li>Sat</li>
      </ul>
      <ul class="days"></ul>
    </div>
  </div>

  <script>
    const bookings = <%- JSON.stringify(bookings) %> || [];
    const currentDateElement = document.querySelector('.current-date');
    const totalBookingsElement = document.querySelector('.total-bookings');
    let monthOffset = 0;

    function formatDateString(year, month, day) {
      return new Date(year, month, day).toISOString().split('T')[0];
    }

    function parseBookingDate(dateString) {
      const [year, month, day] = dateString.split('-');
      const parsedDate = new Date(year, month - 1, day);
      
      if (isNaN(parsedDate) || 
          parsedDate.getFullYear() != year || 
          parsedDate.getMonth() != month - 1 || 
          parsedDate.getDate() != day) {
        throw new Error(`Invalid date: ${dateString}`);
      }
      
      return parsedDate;
    }

    function populateCalendar() {
      const daysContainer = document.querySelector('.days');
      daysContainer.innerHTML = '';

      const today = new Date();
      today.setHours(0, 0, 0, 0);
      
      // Fixed month handling logic
      const baseDate = new Date();
      baseDate.setDate(1);
      baseDate.setMonth(baseDate.getMonth() + monthOffset);
      baseDate.setHours(0, 0, 0, 0);

      const currentDate = new Date(baseDate);
      const month = currentDate.getMonth();
      const year = currentDate.getFullYear();
      const firstDay = new Date(year, month, 1);
      const lastDay = new Date(year, month + 1, 0);

      const currentBookings = bookings.filter(booking => {
        try {
          const bookingDate = parseBookingDate(booking._id);
          return bookingDate.getMonth() === month && 
                 bookingDate.getFullYear() === year;
        } catch (e) {
          console.error(e.message);
          return false;
        }
      });

      const totalBookings = currentBookings.reduce((sum, booking) => sum + (booking.count || 0), 0);
      
      currentDateElement.textContent = new Intl.DateTimeFormat('en-US', {
        month: 'long',
        year: 'numeric'
      }).format(currentDate);
      
      totalBookingsElement.textContent = `Total Bookings: ${totalBookings}`;

      // Add empty cells for days before first day of month
      for (let i = 0; i < firstDay.getDay(); i++) {
        daysContainer.appendChild(document.createElement('li'));
      }

      // Add days of the month
      for (let day = 1; day <= lastDay.getDate(); day++) {
        const li = document.createElement('li');
        li.textContent = day;

        const dateString = formatDateString(year, month, day);
        const booking = currentBookings.find(b => b._id === dateString);

        if (booking) {
          const span = document.createElement('span');
          span.classList.add('booking-count');
          span.textContent = booking.count;
          li.appendChild(span);

          try {
            const bookingDate = parseBookingDate(booking._id);
            bookingDate.setHours(0, 0, 0, 0);
            li.classList.add(bookingDate < today ? 'past' : 'pending');
          } catch (e) {
            console.error(e.message);
          }
        }

        daysContainer.appendChild(li);
      }
    }

    document.querySelector('#prev').addEventListener('click', () => {
      monthOffset = Math.max(-12, monthOffset - 1);
      populateCalendar();
    });

    document.querySelector('#next').addEventListener('click', () => {
      monthOffset = Math.min(12, monthOffset + 1);
      populateCalendar();
    });

    // Initial load
    populateCalendar();
  </script>
</body>
</html>
